[Unit]
Description = Cart Service
[Service]
User=roboshop
Environment=REDIS_HOST=dev-elasticache.cqugcg.clustercfg.use1.cache.amazonaws.com
Environment=CATALOGUE_HOST={{ lookup('aws_ssm', "{{env}}.{{component}}.CATALOGUE_HOST", region='us-east-1' ) }}
